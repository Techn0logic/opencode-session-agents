{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["better-opencode-async-agents"],
  "permission": {
    "list": {
      "~/Projects/opencode-orchestration": "allow"
    },
    "read": {
      "~/Projects/opencode-orchestration/*": "allow"
    },
    "asyncagents_task": {
      "*": "allow"
    }
  },
  "agent": {
    "orchestrator": {
      "mode": "primary",
      "model": "opencode/big-pickle",
      "description": "Pure delegation router - delegates all tasks to subagents",
      "tools": {
        "asyncagents_task": true,
        "asyncagents_list": true,
        "list": true,
        "read": true,
        "grep": false,
        "glob": false,
        "write": false,
        "edit": false,
        "bash": false,
        "asyncagents_output": true,
        "asyncagents_cancel": false,
        "task": true
      }
    }
  },
  "default_agent": "orchestrator"
}
